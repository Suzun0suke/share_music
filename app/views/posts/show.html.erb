<%=render "shared/header"%>
<div class="contents-show">
<%@musics = sp_list_full(@post.url)%>
<%if @musics.present?%>
  <div class="content-show">
    <div class="top-content-show">
    <h2 class="title-show"><%= @post.title %></h2>
    <a href="#" class="user-show">by <%= @post.user.name%></a>
    </div>
        <%if @post.image.present?%>
          <%= link_to (image_tag (@post.image),class: "list-img-show"), post_path(@post.id) %>
        <%end%>
        <div class="hash-name-show">
        <% @post.tag_list.each do |tag| %>
            <span class = "hash" >#</span><%= link_to tag, root_path(tag_name: tag), class:"tag-show" %>
        <%end%>
        </div>
      <ul class="musics">
      <%@musics.length.times do |i|%>
        <li><%=@musics[i].name%></li>
      <%end%>
      </ul>
    <div class="bottom-contents">
    <%=link_to image_tag("app-m.png", class:"icons"), "#" %>
    <%=link_to image_tag("spotify.png", class:"icons"), "https://open.spotify.com/playlist/#{@post.url}" %>
    <%=link_to image_tag("y-m.png", class:"icons"), "#" %>
    </div>
  </div>
  <% end %>

</div>