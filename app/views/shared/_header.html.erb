<header class="top-page-header">
  <div class="top-contents">
  <nav id='nav'>
      <ul>
        <% if user_signed_in? %>
        <p class="greeting">こんにちは<%=current_user.name%>さん<p>
          <li>
            <%= link_to "新規投稿", new_post_path, class:"user-btn" %>
          </li>
          <li>
            <%= link_to "マイページ", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "ユーザー情報編集", edit_user_registration_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: "DELETE", class:"user-btn" %>
          </li>
      <% else %>
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "user-btn" %>
        </li>
        <li>
          <%= link_to "新規登録", new_user_registration_path, class:"user-btn" %>
        </li>
      <% end %>
    </ul>
  </nav>
  <div id="hamburger">
      <span class="inner_line" id="line1"></span>
      <span class="inner_line" id="line2"></span>
      <span class="inner_line" id="line3"></span>
  </div>
    <%= link_to "Share Music", root_path , class:"logo" %>
    <%= link_to "Ranking", ranking_posts_path, class: "top-var" %>
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿、タグ、曲を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
    <% flash.each do |message_type, message| %>
      <%if message_type == "alert" || message_type == "notice"%>
        <div class = "flash">
          <span class="message"><%= message %></span>
        </div>
      <% end %>
    <% end %>
</header>